<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mianscreen">

    <ImageView
        android:id="@+id/option_icon"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="-320dp"
        android:src="@drawable/menu"
        />
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/profileA"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/option_icon"
        android:src="@drawable/profile"
        />
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameUser"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/profileA"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="CHAN RACHEN"
        android:textAlignment="center"
        android:textColor="@color/green"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_below="@id/nameUser"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:src="@drawable/q1"
        android:id="@+id/tranMoney"
        android:layout_marginStart="23dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_below="@id/nameUser"
        android:layout_marginTop="10dp"
        android:layout_height="45dp"
        android:src="@drawable/qrc"
        android:id="@+id/tranMoney1"
        android:layout_marginStart="325dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_below="@id/nameUser"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:src="@drawable/q3"
        android:id="@+id/tranMoney2"
        android:layout_marginStart="100dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_below="@id/nameUser"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:src="@drawable/card"
        android:id="@+id/tranMoney3"
        android:layout_marginStart="250dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_below="@id/nameUser"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:layout_marginStart="175dp"
        android:src="@drawable/q6"
        android:id="@+id/tranMoney4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tranMoney"
        android:layout_marginStart="20dp"
        android:text="Transfer"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tranMoney"
        android:layout_marginStart="95dp"
        android:text="Shopping"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tranMoney"
        android:layout_marginStart="180dp"
        android:text="insight"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tranMoney"
        android:layout_marginStart="255dp"
        android:text="Cards" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tranMoney"
        android:layout_marginStart="320dp"
        android:text="Scan QR"
        />
    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tranMoney"
        android:layout_marginTop="50dp"
        android:text="Salary"
        android:textColor="@color/green"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="55dp"
        />
    <TextView
        android:id="@+id/salaryB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$25,000$"
        android:layout_below="@id/salary"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:padding="30dp"
        android:background="@drawable/circle"
        android:layout_marginTop="5dp"
        android:layout_marginStart="4dp"
        />
    <TextView
        android:layout_marginStart="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$35,000$"
        android:layout_below="@id/salary"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:padding="30dp"
        android:background="@drawable/circle"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tranMoney"
        android:layout_marginTop="50dp"
        android:text="Transfer"
        android:textColor="@color/green"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="250dp"
        />
    <TextView
        android:id="@+id/hisC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/salaryB"
        android:layout_marginTop="20dp"
        android:text="Recent transactions"
        android:textColor="@color/green"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:layout_below="@+id/hisC"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:id="@+id/todayC"
        />
    <ImageView
        android:id="@+id/profileC"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_below="@id/todayC"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/nameHis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHAN RACHEN"
        android:layout_below="@+id/todayC"
        android:layout_marginStart="70dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/moneyHis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-100$"
        android:layout_below="@+id/todayC"
        android:layout_marginStart="320dp"
        android:textSize="18dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_below="@id/profileC"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHAN DARA"
        android:layout_below="@+id/nameHis"
        android:layout_marginStart="70dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+600$"
        android:layout_below="@+id/moneyHis"
        android:layout_marginStart="320dp"
        android:textSize="18dp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        />

</RelativeLayout>