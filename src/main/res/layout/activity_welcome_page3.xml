<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome_page2">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/green"
        android:text=""
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@color/green"
        android:layout_toEndOf="@id/textView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="330dp"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:src="@drawable/a3"
        android:layout_height="250dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/succss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Financial Partner for Life: Citibank"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where Your Financial Goals Become Reality"
        android:layout_below="@+id/succss"
        android:layout_centerHorizontal="true"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/text2"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:id="@+id/buttonBackA"
        android:background="@drawable/circle"
        android:text="Back"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/text2"
        android:layout_marginTop="80dp"
        android:layout_marginStart="310dp"
        android:background="@drawable/circle"
        android:text="Next"
        android:id="@+id/buttonNextB"
        android:textColor="@color/white"/>


</RelativeLayout>